<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      {{!-- posts? --}}
      <a href="/posts/{{post.id}}">{{post.name}}</a> 
    </h2>
    <p>Created by {{post.user.username}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
  <div>
    <p>
      {{!-- each through the comments --}}
      {{!-- {{post.comments}} --}}
    </p>
    <p>
      {{#each post.comments as |comment|}}
  {{comment.content}}
  </p>
  <p>
  comment by: {{comment.user.username}}
  </p>
  {{/each}}
  <div class="form-group-comments">
  <label for="comments">Leave a comment:</label>
  <input type="hidden" id='post-id' value="{{post.id}}">
  <input class="form-input" type="input" id="comments" />
  </div>
  <div>
  <button class="btn btn-primary form-group-comments-submit" type="submit">send</button>
  </div>
    
    
  </div>
</div>

{{/each}}

<script src="/js/comment.js"></script>
